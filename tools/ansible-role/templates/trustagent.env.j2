PROVISION_ATTESTATION=y
GRUB_FILE={{grub_file_path}}
CURRENT_IP={{ ansible_default_ipv4.address }}
TPM_OWNER_SECRET={{ tpm_owner_secret }}
CMS_BASE_URL=https://{{ cms }}:{{ cms_port }}/cms/v1/
AAS_API_URL=https://{{ aas }}:{{ aas_port }}/aas/v1
HVS_URL=https://{{ hvs }}:{{ hvs_port }}/hvs/v2
SAN_LIST={{ ansible_default_ipv4.address }},{{ ansible_fqdn }}

{% if setup == 'workload-conf-containers-docker' %}
WLA_SERVICE_USERNAME={{ wla_service_username }}
WLA_SERVICE_PASSWORD={{ wla_service_password }}
WA_WITH_CONTAINER_SECURITY_DOCKER={{ wa_with_container_security }}
INSECURE_SKIP_VERIFY={{ insecure_skip_verify }}
NO_PROXY={{ registry_ip }}
HTTPS_PROXY={{ https_proxy }}
REGISTRY_SCHEME_TYPE={{ registry_scheme_type }}
WLS_API_URL=https://{{ wls }}:{{ wls_port }}/wls/v1

{% elif setup == 'workload-conf-containers-crio' %}
WLA_SERVICE_USERNAME={{ wla_service_username }}
WLA_SERVICE_PASSWORD={{ wla_service_password }}
WA_WITH_CONTAINER_SECURITY_CRIO={{ wa_with_container_security }}
INSECURE_SKIP_VERIFY={{ insecure_skip_verify }}
NO_PROXY={{ registry_ip }}
HTTPS_PROXY={{ https_proxy }}
REGISTRY_SCHEME_TYPE={{ registry_scheme_type }}
WLS_API_URL=https://{{ wls }}:{{ wls_port }}/wls/v1
{% endif %}

{% if setup == 'workload-conf-vm' %}
WLA_SERVICE_USERNAME={{ wla_service_username }}
WLA_SERVICE_PASSWORD={{ wla_service_password }}
WLS_API_URL=https://{{ wls }}:{{ wls_port }}/wls/v1
{% endif %}

CMS_TLS_CERT_SHA384={{ cms_tlscertsha384 }}
BEARER_TOKEN={{ setup_admin_token }}